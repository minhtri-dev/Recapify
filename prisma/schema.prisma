generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id        Int      @id @map("supabase_id") 
  name      String?
  email     String   @unique
  password  String
  projects  Projects[]
  sources   Sources[]
}

model Projects {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  name      String
  startDate DateTime
  endDate   DateTime?
  notes     Notes[]
}

model Notes {
  id        Int      @id @default(autoincrement())
  projectId Int?
  project   Projects? @relation(fields: [projectId], references: [id])
  content   String
  vector    Unsupported("vector")?
  sources   Sources[]
}

model Sources {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  content   String
  url       String?
  Notes     Notes[]
}